    "health": "node health-check.js",
    "vercel-build": "echo 'Vercel build completed'",
    "heroku-postbuild": "npm install && cd frontend && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
