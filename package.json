{
  "name": "moody-player",
  "version": "1.0.0",
  "description": "AI-powered music application that detects mood and plays matching songs",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd frontend && npm start",
    "server": "nodemon server.js",
    "build": "cd frontend && npm run build",
